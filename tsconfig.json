{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@api": [
        "api"
      ],
      "@helper/*": [
        "helper/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    },
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "twin.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}